{
    leds {
        compatible = "ws2812-spi";
        status = "okay";
        label = "LED_STRIP";

        chain-length = <36>;  // Adjust this to your actual number of LEDs per side
        spi-max-frequency = <4000000>;

        spi = <&spi1>; // Use the SPI bus or use a GPIO-compatible driver for one-wire
        reg = <0>;     // Chip select index (not used for WS2812 but needed syntactically)

        color-order = "GRB"; // SK6812 uses GRB like WS2812
    };
    &i2c1 {
        status = "okay";
        sda-pin = <4>;   // P0.04
        scl-pin = <26>;  // P0.26
        clock-frequency = <I2C_BITRATE_STANDARD>;

        oled@3c {
            compatible = "solomon,ssd1306fb";
            reg = <0x3c>; // I2C address of the OLED
            width = <128>;
            height = <64>; // or <32> depending on your display
            segment-offset = <0>;
            page-offset = <0>;
            display-offset = <0>;
            multiplex-ratio = <63>; // 63 for 64px high, 31 for 32px high
            reset-gpios = <&gpio0 18 GPIO_ACTIVE_LOW>; // Optional: if your OLED has a reset pin
        };
    };
};